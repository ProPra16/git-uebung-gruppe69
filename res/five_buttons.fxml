<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="de.hhu.propra16.FiveButtonsController"
          alignment="CENTER"
          hgap="10"
          vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <Text text="Five Buttons" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Button fx:id="buttonC"
            text="EXIT" GridPane.columnIndex="20" GridPane.columnSpan="20" GridPane.rowIndex="5"
        onAction="#exit"/>
    <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
        <Button text="Datum anzeigen"
                onAction="#showDate"/>
        <Label fx:id="dateLabel"
               text=""/>
    </VBox>
    <Button fx:id="buttonA"
            text="Alert" GridPane.columnIndex="10" GridPane.columnSpan="20" GridPane.rowIndex="5"
            onAction="#alert"/>

</GridPane>
